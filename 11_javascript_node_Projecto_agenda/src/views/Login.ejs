<%- include('includes/head') %> 
<%- include('includes/nav'); %>


<div class="container">
  <div class="row">
    <div class="col-lg-2">
     
    </div>
    <div class="col-lg-8 my-5">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center">Faça login ou crie sua conta a baixo</p>

      <%- include('includes/messages') %> 

      <div class="row">
       
      <div class="col ">
        <h4>Faça seu cadastro</h4>
        <p>Se voce ainda não tem uma conta preencha o formulario a baixo</p>

        <form action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group mb-3">
          <label >Email</label>
          <input type="email" class="form-control" name="email" >
          
        </div>
        <div class="form-group mb-3">
          <label>Senha</label>
          <input type="password" class="form-control" name="password">
        </div>
        
        <button type="submit" class="btn btn-primary">Criar minha conta</button>
      </form>
    </div>
    <div class="col">
      <h4>Faça seu login</h4>
      <p>Se voce ja tem uma conta preencha o formulario a baixo</p>
      <form action="/login/login" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      <div class="form-group mb-3">
        <label >Email</label>
        <input type="email" class="form-control" name="email" >
        
      </div>
      <div class="form-group mb-3">
        <label>Senha</label>
        <input type="password" class="form-control" name="password">
      </div>
      
      <button type="submit" class="btn btn-primary">Entrar na conta</button>
    </form>
  </div>
      </div>
    </div>
    <div class="col-lg-2">
     
    </div>
  </div>
</div>

